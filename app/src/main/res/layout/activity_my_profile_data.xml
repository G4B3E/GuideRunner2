<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileData"
    android:background="#01121a"
    android:orientation="vertical"
    >





    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Data"
        android:fontFamily="@font/monoregular"
        android:textSize="40sp"
        android:textColor="#ed9b00"
        android:gravity="top | center"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Download Data"
        android:id="@+id/DownloadData"
        app:cornerRadius="100dp"
        android:backgroundTint="#03A9F4"
        android:textColor="@color/black"
        android:fontFamily="monospace"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:divider ="#65818C"
        android:id="@+id/list_view_mydata"
        android:padding="3sp"/>






</LinearLayout>