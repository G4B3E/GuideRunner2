<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.KotorII"
    android:background="#01121a"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="#80000000"
        android:layout_margin="5sp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="5sp"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kotorii"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="5sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Star Wars Knights Of The Old Republic II"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Release"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2004"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RolaPlaying"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Platform"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Windows, Xbox, MacOS X,iOS, Android, Linux, PlayStation 5, Nintendo Switch"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Obsidian Entertainment"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5sp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Story"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/monoregular"
            android:paddingStart="5sp"
            android:background="#80000000"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Four thousand years prior to the Star Wars films,[note 1] Darth Malak – Darth Revan's apprentice – has unleashed a Sith armada against the Republic. Many Jedi, scattered and left vulnerable by Malak's aggression, die in battle while others swear loyalty and allegiance to Malak. The game opens with the player's character awakening aboard a doomed Republic capital ship with no recollection of their past."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/monoregular"
            android:paddingStart="5sp"
            android:background="#80000000"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_margin="5sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SpeedRun Guide"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/monoregular"
            android:paddingStart="5sp"
            android:background="#80000000"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/monoregular"
            android:paddingStart="5sp"
            android:background="#80000000"

            />


    </LinearLayout>


</LinearLayout>