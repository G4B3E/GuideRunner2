<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:background="#01121a"
    android:orientation="vertical">




    <com.google.android.material.textview.MaterialTextView
        android:gravity="top | center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="#ed9b00"
        android:textSize="50sp"
        android:fontFamily="@font/monoregular"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10sp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add SpeedRun"
                android:id="@+id/AddSpeedRun"
                app:cornerRadius="100dp"
                android:backgroundTint="#DBCFAB"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Records"
                android:id="@+id/Records"
                app:cornerRadius="100dp"
                android:backgroundTint="#ed9b00"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:id="@+id/AboutUs"
                app:cornerRadius="100dp"
                android:backgroundTint="#ca6702"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center">
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:text="delete account"
            android:id="@+id/ToDeleteAccount"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:layout_marginEnd="11sp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:backgroundTint="#DBCFAB"
            android:text="logout"
            android:id="@+id/ToLogOut"
             />
    </LinearLayout>



</LinearLayout>
