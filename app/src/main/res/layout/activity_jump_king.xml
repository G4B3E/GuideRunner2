<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.JumpKing"
    android:background="#01121a"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="#80000000"
        android:layout_margin="5sp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="5sp"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jumpking"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="5sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jump King"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Release"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Platformer"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Platform"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PlayStation 4, Android, Windows, Xbox One, Nintendo Switch"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nexile"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/monoregular" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5sp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Story"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/monoregular"
            android:paddingStart="5sp"
            android:background="#80000000"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take up the challenge and face true high-stakes platforming in Jump King! Struggle upwards in search of the Smoking Hot Babe of legend, but explore with care; a single missed jump could lead to a long fall back down... "
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/monoregular"
            android:paddingStart="5sp"
            android:background="#80000000"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_margin="5sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SpeedRun Guide"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/monoregular"
            android:paddingStart="5sp"
            android:background="#80000000"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/monoregular"
            android:paddingStart="5sp"
            android:background="#80000000"

            />


    </LinearLayout>


</LinearLayout>