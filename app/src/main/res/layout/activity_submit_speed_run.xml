<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitSpeedRun"
    android:background="#65818C"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top | center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40sp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add SpeedRun"
                android:textColor="#ed9b00"
                android:textSize="50sp"
                android:paddingTop="10sp"
                android:fontFamily="@font/monoregular"
                android:layout_marginBottom="50sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/EditTextUserName"
                    android:hint="username"
                    android:textColorHint="#404040"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:inputType="text"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="3sp"
                    android:layout_marginStart="3sp"
                    android:layout_marginEnd="3sp"
                    android:background="#DBCFAB"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/EditTextGame"
                    android:hint="game"
                    android:textColorHint="#404040"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:inputType="textEmailAddress"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="3sp"
                    android:layout_marginStart="3sp"
                    android:layout_marginEnd="3sp"
                    android:background="#DBCFAB"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/EditTextPlatform"
                    android:hint="platform"
                    android:textColorHint="#404040"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:inputType="textEmailAddress"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="3sp"
                    android:layout_marginStart="3sp"
                    android:layout_marginEnd="3sp"
                    android:background="#DBCFAB"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:id="@+id/EditTextTime"
                android:hint="time"
                android:textColorHint="#404040"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:inputType="textEmailAddress"
                android:fontFamily="monospace"
                android:layout_marginBottom="3sp"
                android:layout_marginStart="3sp"
                android:layout_marginEnd="3sp"
                android:background="#DBCFAB"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/EditTextDifficulty"
                    android:hint="difficulty"
                    android:textColorHint="#404040"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:inputType="textEmailAddress"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="3sp"
                    android:layout_marginStart="3sp"
                    android:layout_marginEnd="3sp"
                    android:background="#DBCFAB"/>
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/EditTextLink"
                    android:hint="link"
                    android:textColorHint="#404040"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:inputType="textEmailAddress"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="3sp"
                    android:layout_marginStart="3sp"
                    android:layout_marginEnd="3sp"
                    android:background="#DBCFAB"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/Cancel"
                    app:cornerRadius="100dp"
                    android:backgroundTint="#DBCFAB"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:layout_marginEnd="10sp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Submit"
                    android:backgroundTint="#ed9b00"
                    android:textColor="@color/black"
                    android:id="@+id/Submit"
                    app:cornerRadius="100dp"
                    />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ExpandableListView
            android:id="@+id/expandableListViewSample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorRight"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:divider="@drawable/aaa"
            android:childDivider="@drawable/aaa"
            />

    </RelativeLayout>



</LinearLayout>